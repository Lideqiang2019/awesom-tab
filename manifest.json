{
    "manifest_version": 3,
    "name": "Awesome Tab",
    "version": "1.0",
    "description": "A powerful tab management extension for Chrome. © 2025 Lintang. All rights reserved.",
    "author": "deqiang",
    "copyright": "© 2025 Lintang. All rights reserved.",
    "license": "MIT",
    "permissions": [
        "tabs",
        "tabGroups",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    }
}